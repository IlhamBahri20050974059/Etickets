@using Etickets.Models

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link rel="shortcut icon" href="~/Content/Images/Etickets.ico" type="image/x-icon" />
     <link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <style>
        .search-input {
  width: 200px;
}

        body{
            background-color: #D9D7EF;
        }
        .nav-right {
            float: right;
        }

        .navbar {
            background-color: #403894;
            overflow: hidden;
            position: fixed;
            top: 0;
            width: 100%;
        }

            .navbar a {
                float: left;
                color: #f2f2f2;
                text-align: center;
                padding: 14px 16px;
                text-decoration: none;
                font-size: 14px;
            }

                .navbar a:hover {
                    background-color: #ddd;
                    color: black;
                }

        .active {
            color: white;
        }

        /* Styling for the footer */
        .container-fluid {
  min-height: calc(100vh - 60px); /* 60px adalah tinggi footer */
  position: relative;
  padding-bottom: 60px; /* 60px adalah tinggi footer */
}


        footer {
            background-color: #403894;
            color: #fff;
            padding: 10px;
            text-align: center;
            position: fixed;
            bottom: 0;
            left: 0;
            right: 0;
        }

         .table {
             background-color: white;
    border-collapse: collapse;
    width: 100%;
}

.table th {
    background-color: #f2f2f2;
    color: #333;
    font-weight: bold;
    padding: 10px;
    text-align: left;
}

.table tbody tr:nth-child(even) {
    background-color: #f2f2f2;
}

.table td {
    padding: 10px;
}
.pagination-container {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.pagination {
  display: inline-flex;
  margin-bottom: 10px;
}

.pagination ul {
  display: inline-flex;
  padding-left: 0;
  list-style: none;
}

.pagination li {
  margin-right: 5px;
}

.pagination li a {
  display: block;
  padding: 5px 10px;
  text-decoration: none;
  color: #007bff;
  border: 1px solid #007bff;
  border-radius: 3px;
}

.pagination li.active a {
  background-color: #007bff;
  color: #fff;
}

.pagination li.disabled a {
  color: #868e96;
  border-color: #868e96;
}

.pagination-info {
  display: flex;
  align-items: center;
}

.pagination-info p {
  margin-right: 10px;
  font-size: 14px;
}

.pagination-info form {
  display: flex;
  align-items: center;
}

.pagination-info input[type="number"] {
  width: 50px;
  margin-right: 5px;
  text-align: center;
  font-size: 14px;
  border: 1px solid #ced4da;
  border-radius: 3px;
}

        .pagination-info input[type="submit"] {
            padding: 5px 10px;
            font-size: 14px;
            color: #fff;
            background-color: #007bff;
            border: 1px solid #007bff;
        }
    </style>
    @RenderSection("head", required: false)
</head>
<body>
    <div class="navbar">
        <a href="#">
            <img src="@Url.Content("~/Content/Images/Etickets.jpg")" alt="Etickets Logo" />
        </a>
    @Html.ActionLink("Movie", "Index", "movies", null, new { @class = "nav-link" })
    @Html.ActionLink("Booking", "Index", "Bookings", null, new { @class = "nav-link" })
    @Html.ActionLink("Cinema", "Index", "Cinemas", null, new { @class = "nav-link" })
    @Html.ActionLink("Actor", "Index", "Actors", null, new { @class = "nav-link" })
    @Html.ActionLink("Producer", "Index", "Producers", null, new { @class = "nav-link" })
    @Html.ActionLink("User", "Index", "Users1", null, new { @class = "nav-link" })
    @Html.ActionLink("Genre", "Index", "Genres", null, new { @class = "nav-link" })
    @Html.ActionLink("Movie Actor", "Index", "MovieActors", null, new { @class = "nav-link" })
    @Html.ActionLink("Movie Producer", "Index", "MovieProducers", null, new { @class = "nav-link" })
    @Html.ActionLink("Movie Cinema", "Index", "MovieCinemas", null, new { @class = "nav-link" })
    @Html.ActionLink("Movie Genre", "Index", "MovieGenres", null, new { @class = "nav-link" })
        <div class="nav-right">
            @{
                User user = null;
                if (Session["UserId"] != null)
                {
                    var db = new eTicketsEntities();
                    var userid = Int32.Parse(Session["UserId"].ToString());
                    user = db.Users.Where(w => w.Id == userid).FirstOrDefault();
                }
            }
            @if (user != null)
            {
                <a href="@Url.Action("Details", "Users1", new { id = user.Id })">
                    <img src="@Url.Content(user.ProfilePictureURL??"/")" class="img-fluid rounded-circle" style="border-radius: 50%;" alt="User Profile" width="37" />
                </a>
            }
        </div>


</div>


    <br><br><br><br>
    <div class="container-fluid">
        @RenderBody()
    </div>

    <!-- Footer section -->
    <footer>
        <p>&copy; Ilham Bahri Albi 2023</p>
    </footer>
    <!-- End of footer section -->

    @RenderSection("scripts", required: false)
</body>
</html>
