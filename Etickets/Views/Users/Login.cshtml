@model Etickets.Models.User

@{
    ViewBag.Title = "Login";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login</title>
    <link rel="shortcut icon" href="~/Content/Images/Etickets.ico" type="image/x-icon" />
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
           background-color: #D9D7EF;
        }

        .container {
            margin-top: 50px;
        }

        h2 {
            font-weight: bold;
            text-align: center;
            margin-bottom: 25px;
        }

        .form-control {
            border-radius: 0;
        }

        .btn-primary {
            border-radius: 0;
            background-color: #007bff;
            border-color: #007bff;
        }

            .btn-primary:hover, .btn-primary:focus, .btn-primary:active {
                background-color: #0069d9;
                border-color: #0062cc;
            }

        .text-center {
            text-align: center;
        }

        .register-link {
            font-weight: bold;
            color: #007bff;
        }

            .register-link:hover {
                color: #0069d9;
            }
    </style>
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <h2 class="text-center">Login</h2>

                @using (Html.BeginForm())
            {
                    @Html.AntiForgeryToken()

                    <div class="form-group">
                        @Html.LabelFor(m => m.Email, new { @class = "control-label" })
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(m => m.Password, new { @class = "control-label" })
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                    </div>

                    <div class="form-group">
                        <button type="submit" class="btn btn-primary btn-block">Login</button>
                    </div>
                }

                <p class="text-center">Belum memiliki akun? @Html.ActionLink("Register disini", "Register")</p>
            </div>
        </div>
    </div>

    
</body>
<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
</html>




